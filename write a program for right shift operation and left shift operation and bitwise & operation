base = 3
exponent = 4
result = 1
while exponent != 0:
result *= base
exponent-=1
print("Answer = " + str(result)) 
left shift operation:-
var = 2;
print("var      = ", var<<0)
print("var * 2  = ", var<<1) 
print("var * 4  = ", var<<2) 
print("var * 8  = ", var<<3) 
print("var * 16 = ", var<<4) 
print("var * 32 = ", var<<5)
bitwise & operation:-
a = 5
b = 9
ans = a & b
print(ans)
